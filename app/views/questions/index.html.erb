<div class="question">
<h1>Listing questions</h1>
  <table class="table table-bordered table-hover">
      <tbody>
        <tr class="active">
          <th> オーナー </th>
          <th> タイトル </th>
          <th> 内容 </th>
          <th> 表示 </th>
          <th> 編集 </th>
          <th> 削除 </th>
        </tr>
        <% @questions.each do |question| %>
        <tr>
          <td><%= question.user.email %></td>
          <td><%= question.title %></td>
          <td><%= question.content %></td>
          <td class="success " width ="5%" style ="text-align:center" > 
            <%= link_to question do %>
             <div class="glyphicon glyphicon-eye-open"> </div> 
            <% end %> 
          </td>

          <% if (current_user == question.user) %>
            <td class="success" width="5%" style ="text-align:center" >
              <%= link_to edit_question_path(question) do %>
              <div class="glyphicon glyphicon-ok"></div>
              <%end%>
            </td>
            <td class="success" width="5%" style ="text-align:center" >
              <%= link_to question , method: :delete, data: { confirm: '本当に削除しますか？' }  do %>
              <div class="glyphicon glyphicon-ok"></div>
              <%end%>
            </td>
          <%else%>
            <td class="danger" width="5%"  style ="text-align:center" > <div class="glyphicon glyphicon-remove "></div> </td>
            <td class="danger" width="5%" style ="text-align:center" > <div class="glyphicon glyphicon-remove "></div> </td>
          <%end%>
        </tr>
        <% end %>
      </tbody>  
    </table>
<br>
<%= link_to '質問する', new_question_path %>
</div>
